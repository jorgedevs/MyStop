<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyStop.Views.WhatsNewView">

    <ContentView.Content>
        <Grid BackgroundColor="#80000000">
            <Frame BackgroundColor="{StaticResource SkyColor}" HasShadow="False" Padding="10,20,10,0" HorizontalOptions="Center" VerticalOptions="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Label Text="Try Bus Alerts!" FontSize="Large" TextColor="White" HorizontalOptions="Center" />
                    </Grid>

                    <Image Grid.Row="1" Source="img_new_1" Aspect="AspectFill" Opacity="0" />
                    <Image Grid.Row="1" x:Name="imgWhatsNew" Source="img_new_1" Aspect="AspectFill" />

                    <Grid Grid.Row="2">
                        <Label x:Name="lblNext" Text="Next" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Button x:Name="btnNext" BackgroundColor="Transparent" />
                    </Grid>
                </Grid>
            </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>