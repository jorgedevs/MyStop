<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyStop.MauiVersion.View.BusArrivalsPage"
    Title="Bus Arrivals"
    BackgroundColor="{StaticResource SkyColor}">

    <ContentPage.ToolbarItems>
        <ToolbarItem 
            IconImageSource="{Binding FavoriteIcon}"
            Command="{Binding FavouriteCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="TitleStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
            <Style x:Key="ListItemStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="Default" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
            <Style x:Key="StatusStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
            <Style x:Key="DataSourceBadgeStyle" TargetType="Frame">
                <Setter Property="Padding" Value="8,4" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <Image 
                Source="bg_clouds2"
                VerticalOptions="Fill"
                Opacity="0.25" />

            <Grid 
                x:Name="grdContent" 
                Padding="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    ColumnSpacing="10" 
                    Padding="20,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Image 
                        Grid.Column="0" 
                        Source="img_stopsign.png" 
                        VerticalOptions="Center" 
                        HorizontalOptions="Start" 
                        WidthRequest="50" />

                    <StackLayout 
                        Grid.Column="1" 
                        VerticalOptions="Center">
                        <Label 
                            Text="{Binding StopInfo}" 
                            LineBreakMode="TailTruncation" 
                            Style="{StaticResource TitleStyle}" />
                        <Label 
                            Text="{Binding StopNumber, StringFormat='Stop #{0}'}" 
                            Style="{StaticResource TitleStyle}" 
                            FontSize="40"
                            FontAttributes="Bold"/>
                    </StackLayout>

                    <!-- Data Source Badge -->
                    <Frame 
                        Grid.Column="2"
                        Style="{StaticResource DataSourceBadgeStyle}"
                        BackgroundColor="{Binding DataSourceText, Converter={StaticResource DataSourceColorConverter}}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleDataSourceCommand}" />
                        </Frame.GestureRecognizers>
                        <Label 
                            Text="{Binding DataSourceText}"
                            TextColor="White"
                            FontSize="12"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                    </Frame>
                </Grid>

                <Grid Grid.Row="1">
                    <ListView 
                        x:Name="listSchedule" 
                        ItemsSource="{Binding ArrivalTimes}" 
                        RefreshCommand="{Binding RefreshCommand}" 
                        BackgroundColor="Transparent" 
                        HasUnevenRows="true" 
                        SeparatorVisibility="None" 
                        IsPullToRefreshEnabled="true" 
                        IsRefreshing="{Binding IsUpdatingArrivalTimes}" 
                        Margin="0,5">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid
                                        ColumnSpacing="10"
                                        Padding="10,10"
                                        Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Route Number -->
                                        <Label 
                                            Grid.Column="0" 
                                            Text="{Binding RouteNo}"
                                            Style="{StaticResource ListItemStyle}"
                                            FontSize="24"
                                            FontAttributes="Bold"
                                            VerticalOptions="Center" />
                                        
                                        <!-- Destination -->
                                        <Label
                                            Grid.Column="1" 
                                            Text="{Binding Destination}"
                                            Style="{StaticResource ListItemStyle}"
                                            LineBreakMode="TailTruncation"
                                            FontSize="22"
                                            VerticalOptions="Center" />
                                        
                                        <!-- Arrival Time and Status -->
                                        <StackLayout
                                            Grid.Column="2"
                                            VerticalOptions="Center"
                                            HorizontalOptions="End"
                                            Spacing="2">
                                            
                                            <!-- Arrival Time -->
                                            <Label 
                                                Text="{Binding ExpectedCountdown, StringFormat='{0} min'}"
                                                Style="{StaticResource ListItemStyle}"
                                                FontSize="20"
                                                FontAttributes="Bold"
                                                HorizontalOptions="Center" />
                                            
                                            <!-- Schedule Status -->
                                            <Label 
                                                Text="{Binding ScheduleStatus}"
                                                Style="{StaticResource StatusStyle}">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ScheduleStatus}" Value="On Time">
                                                        <Setter Property="TextColor" Value="#4CAF50" />
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ScheduleStatus}" Value="Early">
                                                        <Setter Property="TextColor" Value="#2196F3" />
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ScheduleStatus}" Value="Delayed">
                                                        <Setter Property="TextColor" Value="#FF9800" />
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ScheduleStatus}" Value="Late">
                                                        <Setter Property="TextColor" Value="#F44336" />
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Label" Binding="{Binding ScheduleStatus}" Value="Scheduled">
                                                        <Setter Property="TextColor" Value="#9E9E9E" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </StackLayout>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Image 
                        x:Name="imgBottomList" 
                        Source="img_gradient_bottom" 
                        Aspect="AspectFill" 
                        InputTransparent="true" 
                        VerticalOptions="End" />
                </Grid>

                <Grid 
                    Grid.Row="2">
                    <Image 
                        x:Name="imgFooter" 
                        Source="bg_arrivals" 
                        Aspect="Fill" 
                        HorizontalOptions="Fill" 
                        VerticalOptions="End" />
                    <Image 
                        x:Name="imgBus" 
                        Source="img_bus_side" 
                        Scale="0.9" 
                        HorizontalOptions="Start" 
                        VerticalOptions="End"
                        Margin="0,0,0,8"/>
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>