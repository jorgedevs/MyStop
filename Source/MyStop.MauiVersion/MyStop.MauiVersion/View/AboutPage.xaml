<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyStop.MauiVersion.View.AboutPage"
    Title="About MyStop"
    BackgroundColor="{StaticResource SkyColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="NameStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="VerticalOptions" Value="Start" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
            <Style x:Key="ProfessionStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="VerticalOptions" Value="Start" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <Image Source="bg_clouds1" Opacity="0.5" Aspect="AspectFill" />

            <Grid x:Name="grdContent">


                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" RowSpacing="60" VerticalOptions="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackLayout Grid.Row="0" VerticalOptions="Center">
                        <Label Text="MyStop" VerticalOptions="Start" HorizontalOptions="Center" FontSize="40" FontAttributes="Bold" TextColor="White" />
                        <Label Text="Version 1.0" VerticalOptions="Start" HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold" TextColor="White" />
                    </StackLayout>

                    <StackLayout Grid.Row="1">
                        <Label Text="Jorge Ramirez" Style="{StaticResource NameStyle}" />
                        <Label Text="Software Developer" Style="{StaticResource ProfessionStyle}" />
                    </StackLayout>

                    <StackLayout Grid.Row="2">
                        <Label Text="Marisol Ramirez" Style="{StaticResource NameStyle}" />
                        <Label Text="Graphic Designer" Style="{StaticResource ProfessionStyle}" />
                    </StackLayout>

                    <Grid Grid.Row="3">
                        <Image Source="img_donate_thanks.png" HorizontalOptions="Center" VerticalOptions="Start" />
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <Image x:Name="imgFooter" Source="bg_donate_city" Aspect="AspectFill" HorizontalOptions="FillAndExpand" VerticalOptions="End" />
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>