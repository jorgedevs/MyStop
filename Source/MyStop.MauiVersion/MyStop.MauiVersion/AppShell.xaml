<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyStop.MauiVersion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyStop.MauiVersion.View"
    Shell.FlyoutBehavior="Disabled" BackgroundColor="#3B70DF">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="home" />
    <ShellContent
        Title="Bus Arrivals"
        ContentTemplate="{DataTemplate local:BusArrivalsPage}"
        Route="arrivals"/>
    <ShellContent
        Title="My Bus Stops"
        ContentTemplate="{DataTemplate local:FavouriteStopsPage}"
        Route="favorites"/>
</Shell>
